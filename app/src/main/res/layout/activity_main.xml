<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/app_logo2"
    android:orientation="vertical"
    tools:context="MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:drawablePadding="10dp"
        android:text="Ôn thi giấy phép lái xe"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_marginTop="105dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnThithu"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/lamthude" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="122dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnHocBienBao"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/hocbienbao" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="154dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <ImageButton
            android:id="@+id/btnThuchanh"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/gioithieuthuchanh" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <ImageButton
            android:id="@+id/phatbtn"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/mucxuphat" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Các phần tử khác trong FrameLayout -->

        <!-- LinearLayout được đặt ở cuối trang -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <!-- Button ở bên trái -->
            <Button
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Trang chủ"
                android:id="@+id/homebtn"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:padding="17dp"
                android:textSize="15sp"/>

            <!-- Các phần tử trong LinearLayout -->

            <!-- Button ở bên phải -->
            <Button
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text="Tài khoản"
                android:id="@+id/myaccountbtn"
                android:textColor="@color/white"
                android:padding="17dp"
                android:textSize="15sp"
                android:background="@drawable/button_background"
                />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
